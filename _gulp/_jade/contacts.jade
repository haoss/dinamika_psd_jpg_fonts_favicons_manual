//- Контакты
doctype

html(lang="ru")
  
  -var active = 'Контакты' //активный пункт меню, список в header.jade
  -var pageTitle = 'Контакты' + ' - Dinamika' //title страницы для генерации верстки  

  include ./_include/_head

